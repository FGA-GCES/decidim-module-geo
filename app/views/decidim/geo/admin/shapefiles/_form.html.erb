<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="row column">
    <fieldset>
      <legend><%= t(".attachment_legend") %></legend>
      <%= form.fields_for :attachment, @form.attachment do |form| %>
        <div class="row column">
          <%= form.text_field :title %>
        </div>

        <div class="row column">
          <%= form.text_area :description %>
        </div>

        <div class="row column">
          <%= form.file_field :shapefile, optional: false %>
          <legend class="help-text"><%= t(".attachment_legend") %></legend>
          <legend class="help-text"><%= t(".attachment_max_size") %></legend>
        </div>
      </fieldset>
    </div>
  </div>
</div>